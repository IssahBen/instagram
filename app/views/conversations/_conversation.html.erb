 <div class="d-flex justify-content-between">
    <%participant = conversation.users.find{|user| user != current_user} %>
   <div class="d-flex">
    <%= image_tag participant.profile_pic.attached? ? participant.profile_pic : 'user-pp.png', class: "img-thumbnail rounded-circle", style: "width: 2.5rem" %>
     <div class="d-flex flex-column mx-3 justify-content-center">
     <small class="fw-bold" style="overflow: hidden;text-overflow: ellipsis;white-space: nowrap;max-width:10rem"><%= link_to participant, class: "a-decoration-none", data: {turbo: 'false'} do %><%= participant.username %><% end %></small>
     </div>
   </div>

  
</div>