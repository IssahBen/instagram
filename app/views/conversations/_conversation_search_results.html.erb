<%= turbo_frame_tag "conversation_search_results" do %>
   <% users.each do |u| %>
     <li class="mt-3">
       <div class="d-flex justify-content-between">
         <div class="d-flex">
           <%= image_tag u.profile_pic.attached? ? u.profile_pic : 'user-pp.png', class: "img-thumbnail rounded-circle", style: "width: 2.5rem" %>
           <div class="d-flex flex-column mx-3 justify-content-center">
             <small class="fw-bold" style="overflow: hidden;text-overflow: ellipsis;white-space: nowrap;max-width:10rem"><%= link_to user_conversations_path(participant_id: u.id), class:  "a-decoration-none", data: {turbo: false}, method: :post do %><%= u.username %><% end %></small>
           </div>
         </div>                    
       </div>
     </li>
   <% end %>
 <% end %> 