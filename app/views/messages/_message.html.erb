

                <li class=" participant d-flex justify-content-between mb-4" >
                    <div class="card w-100">
                    <div class="card-header d-flex justify-content-between p-3">
                        <p class="fw-bold mb-0"><%=message.user.username %></p>
                        <p class="text-muted small mb-0"><i class="far fa-clock"></i> <%=  time_ago_in_words(message.created_at) %></p>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">
                            <%= message.content %>
                        </p>
                    </div>
                    </div>
                    <%= image_tag message.user.profile_pic.attached? ? message.user.profile_pic : 'user-pp.png', class: "img-thumbnail rounded-circle", style: "width: 2.5rem; max-height:2.5rem" %>
                </li>

